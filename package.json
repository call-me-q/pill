{
  "name": "pill",
  "version": "0.1.0",
  "description": "Monorepo for pill",
  "license": "UNLICENSED",
  "author": "Muhammad Tsany Qudsi <phlacx@hotmail.com>",
  "workspaces": [
    "./apps/*",
    "./packages/*",
    "./scripts/*"
  ],
  "scripts": {
    "auth:secret": "npx @better-auth/cli@latest secret",
    "build:constants": "npx dotenvx run -- npx turbo build-constants",
    "build:db": "npx dotenvx run -- npx turbo build-db",
    "build:env": "npx dotenvx run -- npm start -w @pill/process-env-types",
    "postbuild:env": "npx dotenvx ext genexample",
    "db:gen": "npx dotenvx run -- npm run generate-db -w @pill/db",
    "db:mig": "npx dotenvx run -- npm run migrate-db -w @pill/db",
    "dev": "npx dotenvx run --verbose -- npx turbo dev"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.32.0",
    "@hono/node-server": "^1.13.5",
    "@hono/zod-validator": "^0.4.2",
    "@libsql/client": "^0.14.0",
    "@pill/constants": "*",
    "@pill/db": "*",
    "@scalar/hono-api-reference": "^0.5.165",
    "better-auth": "^1.1.8",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.16",
    "hono-openapi": "^0.3.1",
    "nanoid": "^5.0.9",
    "openapi-merge": "^1.3.3",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.2"
  },
  "devDependencies": {
    "@alienfast/find-monorepo-root": "^1.0.9",
    "@eslint/js": "^9.17.0",
    "@pill/tsconfig": "*",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.10.4",
    "atlassian-openapi": "^1.0.20",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "packageManager": "npm@10.9.0"
}
