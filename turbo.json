{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "TURSO_DATABASE_URL",
    "TURSO_AUTH_TOKEN",
    "BETTER_AUTH_SECRET",
    "ENABLE_OPEN_API",
    "ENABLE_SSL",
    "APP_HOST",
    "APP_PORT"
  ],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build-db"
      ]
    },
    "build-constants": {
      "outputs": [
        "./dist/**"
      ]
    },
    "build-db": {
      "outputs": [
        "./dist/**"
      ],
      "dependsOn": [
        "^build-constants"
      ]
    }
  }
}
