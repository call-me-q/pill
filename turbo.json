{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "TURSO_DATABASE_URL",
    "TURSO_AUTH_TOKEN",
    "APP_PORT",
    "APP_HOST",
    "ENABLE_SSL",
    "ENABLE_OPEN_API"
  ],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build-db"]
    },
    "build-constants": {
      "outputs": ["./dist/**"]
    },
    "build-db": {
      "outputs": ["./dist/**"],
      "dependsOn": ["^build-constants"]
    }
  }
}
